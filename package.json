{
  "name": "ecommerce-api",
  "version": "1.0.0",
  "author": "luizxsoto",
  "description": "Clean code / architecture POC application",
  "license": "ISC",
  "keywords": [],
  "main": "index.js",
  "homepage": "https://github.com/luizxsoto/ecommerce-api#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luizxsoto/ecommerce-api.git"
  },
  "bugs": {
    "url": "https://github.com/luizxsoto/ecommerce-api/issues"
  },
  "engines": {
    "node": ">=16.13.0"
  },
  "scripts": {
    "start": "node -r dotenv/config dist/src/main/server.js",
    "start:dev": "ts-node-dev --respawn --transpile-only --clear -r dotenv/config --inspect=0.0.0.0:9229 src/main/server.ts",
    "prebuild": "rm -rf ./dist",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"./**/*.ts\"",
    "lint": "eslint \"./**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "test:unit": "npm test -- --watch -c jest-unit.config.ts",
    "test:integration": "npm test -- --watch -c jest-integration.config.ts",
    "pretest:cov": "rm -rf ./coverage",
    "test:cov": "npm test -- --coverage --silent",
    "preknex": "npm run build",
    "knex": "knex --knexfile ./dist/database/knexfile.js",
    "prepare": "husky install",
    "commit": "cz",
    "pre-push": "concurrently npm:test:cov npm:build",
    "check": "ncu",
    "postinstall": "echo \"Checking dependencies...\" & npm run check"
  },
  "dependencies": {
    "@jest/types": "^28.1.3",
    "bcrypt": "^5.0.1",
    "crypto": "^1.0.1",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^2.2.0",
    "lodash.get": "^4.4.2",
    "module-alias": "^2.2.2",
    "pg": "^8.7.3",
    "supertest": "^6.2.4",
    "swagger-ui-express": "^4.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.6",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash.get": "^4.4.7",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^18.6.3",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "commitizen": "^4.2.5",
    "concurrently": "^7.3.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "npm-check-updates": "^16.0.4",
    "prettier": "^2.7.1",
    "sqlite3": "^5.0.11",
    "ts-jest": "^28.0.7",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  }
}
