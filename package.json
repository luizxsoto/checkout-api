{
  "name": "checkout-api",
  "version": "1.0.0",
  "author": "luizxsoto",
  "description": "Clean code / architecture POC application",
  "license": "ISC",
  "keywords": [],
  "main": "index.js",
  "homepage": "https://github.com/luizxsoto/checkout-api#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luizxsoto/checkout-api.git"
  },
  "bugs": {
    "url": "https://github.com/luizxsoto/checkout-api/issues"
  },
  "engines": {
    "node": ">=16.13.0"
  },
  "scripts": {
    "start": "node -r dotenv/config dist/src/main/server.js",
    "start:dev": "ts-node-dev --respawn --transpile-only --clear -r dotenv/config --inspect=0.0.0.0:9229 src/main/server.ts",
    "prebuild": "rm -rf ./dist",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"./**/*.ts\"",
    "lint": "eslint \"./**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "test:unit": "npm test -- --watch -c jest-unit.config.ts",
    "test:integration": "npm test -- --watch -c jest-integration.config.ts",
    "test:cov": "npm test -- --coverage --silent",
    "preknex": "npm run build",
    "knex": "knex --knexfile ./dist/database/knexfile.js",
    "prepare": "husky install",
    "commit": "cz",
    "pre-push": "concurrently npm:test:cov npm:build",
    "check": "ncu",
    "postinstall": "echo \"Checking dependencies...\" & npm run check"
  },
  "dependencies": {
    "@jest/types": "^27.5.1",
    "crypto": "^1.0.1",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "knex": "^1.0.6",
    "module-alias": "^2.2.2",
    "pg": "^8.7.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "commitizen": "^4.2.4",
    "concurrently": "^7.1.0",
    "eslint": "^8.13.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "npm-check-updates": "^12.5.8",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.3"
  }
}
